{
  "name": "bs-nodemon-demo",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"npm run dev:server\" \"npm run dev:bs\"",
    "dev:server": "nodemon --watch server.js --exec \"node server.js\"",
    "dev:bs": "browser-sync start -p localhost:3000 --port 4000 --files 'public/**/*.*, **/*' --no-inject-changes --ws"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
